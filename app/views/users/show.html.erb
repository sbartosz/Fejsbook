<table class="profile" summary="Profile information">
  <tr>
    <td class="main">
    

	<% if current_user?(@user) %>
	  <table class="front" summary="">
	    <tr>
	      <td class="main">
		<h1 class="micropost">Dodaj post: </h1>

		<%= form_for @micropost do |f| %>
		<div class="field">
		<%= f.text_area :content,:rows => 3, :cols => 60 %>
		</div>
		<div class="actions">
		<%= f.submit "Wyślij" %>
		</div>
		<% end %>
	      </td>
	   
	    </tr>
	  </table>
	<% end %>


	<% unless @user.microposts.empty? %>
	<table class="microposts" summary="Posty">

	<% @microposts.each do |micropost| %>

		<tr>
		<td class="micropost">
		<span class="timestamp">
		<hr>
		Wysłany <%= time_ago_in_words(micropost.created_at) %> temu.
		</span><br />
    		<i><span class="content"><%= micropost.content %></span></i>		
		</td>
		<% if current_user?(@user) %>
		<td>
		    <%= link_to "Usuń", micropost, :method => :delete %>
		</td>	
		<% end %> 	
		</tr>

	<% end %>

	</table>
	<% end %>


    </td>
    <td class="sidebar round">

	<fieldset>
	<legend>Info</legend> 
		<%= gravatar_image_tag @user.email %><br />
		<strong>Nick: </strong> <%= @user.name %><br />
		<strong>URL: </strong>  <%= link_to user_path(@user), @user %><br />
		<strong>Posty: </strong> <%= @user.microposts.count %>
	</fieldset>
	<br />	
	<fieldset>
	<legend>Znajomi</legend> 
	
	</fieldset>
    </td>
  </tr>
</table>
